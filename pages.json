{
	"easycom": {
		"^u-(.*)": "@/uni_modules/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"name": "index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		}
	    ,{
            "path" : "pages/center/center",
			"name": "center",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "个人中心"
            }
            
        }
        ,{
            "path" : "pages/goods/goods",
			"name": "goods",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "商品",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/cart/cart",
			"name": "cart",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "购物车",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/auth/login",
			"name": "login",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/auth/register",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "小书店",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
	    "color": "#7A7E83",
	    "selectedColor": "#1296db",
	    "borderStyle": "black",
	    "backgroundColor": "#ffffff",
	    "list": [{
	        "pagePath": "pages/index/index",
	        "iconPath": "static/icon/home.png",
	        "selectedIconPath": "static/icon/home_s.png",
	        "text": "首页"
	    },{
	        "pagePath": "pages/goods/goods",
	        "iconPath": "static/icon/goods.png",
	        "selectedIconPath": "static/icon/goods_s.png",
	        "text": "商品"
	    },{
	        "pagePath": "pages/cart/cart",
	        "iconPath": "static/icon/cart.png",
	        "selectedIconPath": "static/icon/cart_s.png",
	        "text": "购物车"
	    },{
	        "pagePath": "pages/center/center",
	        "iconPath": "static/icon/user.png",
	        "selectedIconPath": "static/icon/user_s.png",
	        "text": "我"
	    }]
	}
}
